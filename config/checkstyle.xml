<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
          "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
          "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name = "Checker">
    <module name="TreeWalker">
        <module name="BooleanExpressionComplexity"></module>
        <module name="CyclomaticComplexity"></module>
        <module name="MethodLength"></module>
        <module name="EmptyCatchBlock"></module>
        <module name="AvoidStarImport"></module>
        <module name="IllegalImport"></module>
        <module name="NeedBraces"></module>
    </module>
    <module name="LineLength">
        <property name="max" value="90"/>
    </module>
    <module name="FileLength"></module>
    <module name="FileTabCharacter"></module>
    <module name="Header">
        <property name="headerFile" value="config/header.txt"/>
        <property name="fileExtensions" value="java"/>
    </module>
</module>